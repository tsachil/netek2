{
  "name": "bt-cts",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm --workspace apps/api run dev",
    "dev:web": "npm --workspace apps/web run dev",
    "build": "npm run --workspaces --if-present build",
    "test": "npm run --workspaces --if-present test",
    "test:accessibility": "npm --workspace apps/web run test -- src/pages/AccessibilityRegression.test.tsx",
    "check:ci": "npm test && npm run test:accessibility"
  }
}
